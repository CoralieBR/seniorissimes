<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<script src="https://kit.fontawesome.com/636765d7b7.js" crossorigin="anonymous"></script>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/styles.css')}}">
			<link rel="stylesheet" href="{{ asset('css/' ~ pageName ~ 'style.css')}}">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
			<script src="{{ asset('js/script.js')}}"></script>
	</head>
	<body>

		<nav class="nav" id="navmain">
			<div class="menu" id="navmenumain">
				<a href="{{ path('app_home') }}" class="logo" id="navlogomain">SENIORISSIMES</a>
			</div>
			<div class="contact" id="navcontactmain">
				<a href="{{ path('app_contact') }}" class="liencontact" id="navcontactbtn">Contact</a>
			</div>
			<button class="btnchangecolor" id="btncolor" onclick="changecolor()">Changer les couleurs</button>
			<button class="btnresetcolor" id="btnreset" onclick="resetcolor()">Remettre les couleurs</button>
		</nav>

		{% block body %}{% endblock %}

		<footer class="footer" id="footermain">
			<p class="remerciements">Coralie, Banafsheh, Benjamin</p>
		</footer>

	</body>
</html>
